<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UserHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/rlToolBar">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:tint="@color/light_orange"
            android:id="@+id/ivBack"
            android:src="@drawable/ic_cart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/app_name"
            tools:ignore="MissingPrefix" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_NevProfileName"
        android:fontFamily="@font/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlToolBar"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:text="Catering Terbaru"
        android:textColor="@color/black"
        android:textSize="13dp"
        tools:ignore="MissingPrefix" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCatering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_NevProfileName"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tvTenda"
        android:fontFamily="@font/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvCatering"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Tenda Terbaru"
        android:textColor="@color/black"
        android:textSize="13dp"
        tools:ignore="MissingPrefix" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTenda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTenda"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    
</RelativeLayout>