<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_orange">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rlRegistration">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivPenyedia"
            android:src="@drawable/ic_appicon"
            android:layout_centerInParent="true"/>
        <TextView
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/tvHintFoto"
            android:visibility="invisible"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/ivCatering"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10sp"
            android:text="Tap Untuk Mengubah Foto"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/rlRegistration"
        android:paddingHorizontal="10dp"
        android:background="@drawable/bg_top_shap_10">

        <TextView
            android:id="@+id/tvTitle"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Detail Pengguna"
            android:textColor="@color/light_orange"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Nama"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:id="@+id/tvName"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/roboto_bold"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Email"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Phone"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tvJenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Jenis"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />

    </LinearLayout>
</RelativeLayout>