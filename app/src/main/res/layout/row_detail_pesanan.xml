<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lineCatering"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rlGambarStatus"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivKeranjang"
                    fontPath="@string/font_medium"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder"
                    android:textSize="12sp"
                    app:riv_corner_radius="5dp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/tvStatusDetailPesanan"
                    android:layout_below="@+id/ivKeranjang"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:background="@color/red_btn_bg_color"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:visibility="invisible"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Status"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    tools:ignore="RtlCompat" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Sandwich"
                        fontPath="@string/font_bold"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:ignore="MissingPrefix" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/tvPrice"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Rp. 0"
                        android:paddingLeft="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/light_orange"
                        android:textSize="12sp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvJumlahDipesan"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Jumlah dipesan"
                        android:paddingLeft="5dp"
                        android:maxLines="1"
                        android:layout_marginTop="30dp"
                        android:layout_below="@+id/tvPrice"
                        android:ellipsize="end"
                        android:textColor="@color/light_orange"
                        android:textSize="12sp"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/ivTolak"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="start"
                        android:src="@drawable/ic_delete_forever_red_24dp"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="5dp"
                        android:tint="@color/light_orange"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvJenis"
                        android:layout_below="@+id/tvJumlahDipesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/main_green_color"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Jenis"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        tools:ignore="RtlCompat" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>